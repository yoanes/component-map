<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="map" namespace="/map" extends="map-component-default">

        <action name="getMap" class="getMapAction" >
            <result name="success" type="tiles">map.component.map</result>
            <result name="ajaxSuccess" type="tiles">map.component.map.json</result>
        </action>

        <action name="manMap" class="manMapAction" >
            <result name="success" type="tiles">map.component.map</result>
            <result name="ajaxSuccess" type="tiles">map.component.map.json</result>
        </action>

        <action name="mapStateChange" class="clientSideGeneratedMapStateChangeAction" >
            <result name="success" type="tiles">map.component.map</result>
        </action>
        
        <action name="getPois" class="getPoisAction" >
            <result name="success" type="tiles">map.component.pois</result>
            <result name="ajaxSuccess" type="tiles">map.component.pois.json</result>
        </action>
        
        <action name="manPoiMap" class="manPoiMapAction" >
            <result name="success" type="tiles">map.component.pois</result>
            <result name="ajaxSuccess" type="tiles">map.component.pois.json</result>
        </action>

        <action name="poiMapStateChange" class="clientSideGeneratedMapStateChangeAction" >
            <result name="success" type="tiles">map.component.pois</result>
        </action>
        
        <action name="getRoute" class="getRouteAction" >
            <result name="success" type="tiles">map.component.route</result>
            <result name="ajaxSuccess" type="tiles">map.component.route.json</result>
        </action>
        
        <action name="manRouteMap" class="manRouteMapAction" >
            <result name="success" type="tiles">map.component.route</result>
            <result name="ajaxSuccess" type="tiles">map.component.route.json</result>
        </action>

        <action name="routeMapStateChange" class="clientSideGeneratedMapStateChangeAction" >
            <result name="success" type="tiles">map.component.route</result>
        </action>
        
        <action name="getRouteLegStepMap" class="getRouteLegStepMapAction" >
            <result name="success" type="tiles">map.component.route.leg</result>
            <result name="ajaxSuccess" type="tiles">map.component.route.leg.json</result>
        </action>
        
        <action name="manRouteLegStepMap" class="manRouteLegStepMapAction" >
            <result name="success" type="tiles">map.component.route.leg</result>
            <result name="ajaxSuccess" type="tiles">map.component.route.leg.json</result>
        </action>
        

    </package>

</struts>
