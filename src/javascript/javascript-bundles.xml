<?xml version="1.0" encoding="UTF-8"?>
<bs:bundlesConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:bs="http://mobile.sensis.com.au/build-scripts"
    xsi:schemaLocation="http://mobile.sensis.com.au/build-scripts au.com.sensis.mobile.bundles.xsd">
    
    <bundles basename="map-component" subpackage="map">
    	<!-- device independent script. So far none -->
        <bundle name="common" abstract="true">
       <!-- <fileset dir="${src.javascript.dir}/map/device-invariant">
            </fileset> -->
        </bundle>
        
        <!-- set the higher level categories dependencies -->
        <bundle name="advance" parent="common">
            <fileset dir="${src.javascript.dir}/map/device-variant/advance">
            </fileset>
        </bundle>
         <bundle name="intermediate" parent="common">
        	<fileset dir="${src.javascript.dir}/map/device-variant/intermediate">
            </fileset>
        </bundle>
        <bundle name="advance-nonGesturalTouch" parent="common">
        	 <fileset dir="${src.javascript.dir}/map/device-variant/advance-nonGesturalTouch">
            </fileset>
        </bundle>
        
        <!-- more specific config per devices -->
        <bundle name="default" parent="advance">
            <fileset dir="${src.javascript.dir}/map/device-variant/default">
            </fileset>
        </bundle>
        <bundle name="iphone" parent="advance">
            <fileset dir="${src.javascript.dir}/map/device-variant/iphone">
            </fileset>
        </bundle>
        <bundle name="android" parent="advance">
            <fileset dir="${src.javascript.dir}/map/device-variant/android">
            </fileset>
        </bundle>
        <bundle name="thub" parent="advance-nonGesturalTouch">
            <fileset dir="${src.javascript.dir}/map/device-variant/thub">
            </fileset>
        </bundle>
    </bundles>
</bs:bundlesConfig>
