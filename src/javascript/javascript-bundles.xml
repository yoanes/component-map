<?xml version="1.0" encoding="UTF-8"?>
<bs:bundlesConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:bs="http://mobile.sensis.com.au/build-scripts"
    xsi:schemaLocation="http://mobile.sensis.com.au/build-scripts au.com.sensis.mobile.bundles.xsd">
    
    <bundles basename="map-component" subpackage="map">
    	<!-- device independent script. So far none -->
        
        <!-- set the higher level categories dependencies -->
        <bundle name="advance" abstract="true">
            <fileset dir="${src.javascript.dir}/map/device-variant/advance">
            </fileset>
        </bundle>
        
        <bundle name="intermediate">
        	<fileset dir="${src.javascript.dir}/map/device-variant/intermediate">
            </fileset>
        </bundle>
        
        <!-- device family categories -->
        <bundle name="android" parent="advance" abstract="true">
            <fileset dir="${src.javascript.dir}/map/device-variant/android">
            </fileset>
        </bundle>
        
        <bundle name="apple" parent="advance" abstract="true">
            <fileset dir="${src.javascript.dir}/map/device-variant/apple">
            </fileset>
        </bundle>
     
        <bundle name="advance-nonGesturalTouch" parent="advance" abstract="true">
        	<fileset dir="${src.javascript.dir}/map/device-variant/advance-nonGesturalTouch">
            </fileset>
        </bundle>
           
        <!-- more specific device family. This point onwards are the real bundle -->
        
        <bundle name="default" parent="advance-nonGesturalTouch">
            <fileset dir="${src.javascript.dir}/map/device-variant/default">
            </fileset>
        </bundle>
        
        <bundle name="android-os" parent="android">
            <fileset dir="${src.javascript.dir}/map/device-variant/android-os">
            </fileset>
        </bundle>
        
        <!-- device specific config -->
        <bundle name="iphone-ipod" parent="apple">
            <fileset dir="${src.javascript.dir}/map/device-variant/iphone">
            </fileset>
        </bundle>
        
        <bundle name="ipad" parent="apple">
            <fileset dir="${src.javascript.dir}/map/device-variant/ipad">
            </fileset>
        </bundle>
        
        <bundle name="thub" parent="advance-nonGesturalTouch">
            <fileset dir="${src.javascript.dir}/map/device-variant/thub">
            </fileset>
        </bundle>
        
        <bundle name="sex10" parent="android">
            <fileset dir="${src.javascript.dir}/map/device-variant/sex10">
            </fileset>
        </bundle>
    </bundles>
</bs:bundlesConfig>
