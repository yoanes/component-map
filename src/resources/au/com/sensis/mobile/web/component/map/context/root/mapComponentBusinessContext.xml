<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:util="http://www.springframework.org/schema/util"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
                http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
                
    <bean id="map.comp.mapDelegate"
            class="au.com.sensis.mobile.web.component.map.business.MapDelegateImpl"
            init-method="validateState">
            
        <!-- TODO: parameterise emsManager bean name, defaulting to emsManager. -->            
        <property name="emsManager" ref="emsManager" />            
        
        <property name="screenDimensionsStrategy">
            <ref local="map.comp.screenDimensionsStrategy"/>
        </property>
        
        <property name="minZoom" value="@{map.comp.maps.minZoom}" />
        <property name="maxZoom" value="@{map.comp.maps.maxZoom}" />
        
        <property name="deviceConfigRegistry">
            <ref local="map.comp.deviceConfigRegistry"/>
        </property>
        
        <property name="poiMapRadiusMultiplier" value="1.0"/>
    </bean>
    
    <bean id="map.comp.deviceConfigRegistry"
        class="au.com.sensis.mobile.web.component.map.device.MapDeviceConfigRegistry">
        <constructor-arg index="0" value="@{map.comp.device.config.classpath}"/>
        <constructor-arg index="1">
            <bean class="au.com.sensis.wireless.common.utils.jaxb.JaxbXMLBinderImpl">
                <constructor-arg index="0" value="au.com.sensis.mobile.web.component.map.device.generated:au.com.sensis.mobile.web.component.core.device.generated"/>
                <property name="validationEnabled" value="true"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="map.comp.screenDimensionsStrategy" 
        class="au.com.sensis.mobile.web.component.map.business.DefaultScreenDimensionsStrategy" />
</beans>
