<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:util="http://www.springframework.org/schema/util"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <bean id="map.locationManager"
            class="au.com.sensis.mobile.web.component.map.service.LocationManagerImpl"
            init-method="validateState">

        <!-- TODO: parameterise emsManager bean name, defaulting to emsManager. -->
        <property name="emsManager" ref="emsManager" />
        <property name="mapWidthMarginLarge" value="@{map-component.maps.widthMargin.large}"/>
        <property name="mapHeightMarginLarge" value="@{map-component.maps.heightMargin.large}"/>
        <property name="mapWidthMarginMedium" value="@{map-component.maps.widthMargin.medium}"/>
        <property name="mapHeightMarginMedium" value="@{map-component.maps.heightMargin.medium}"/>
<!--       <property name="emsLocationUtilityManager" ref="emsLocationUtilityManager" />-->
    </bean>
    
    <bean id="map.mapDelegate"
            class="au.com.sensis.mobile.web.component.map.business.MapDelegate"
            init-method="validateState">
        <property name="locationManager" ref="map.locationManager"/>
        
        <!-- TODO: should be from map component properties, not app properties. -->
        <property name="minZoom" value="@{map-component.maps.minZoom}" />
        <property name="maxZoom" value="@{map-component.maps.maxZoom}" />
    </bean>
</beans>
